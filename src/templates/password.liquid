{% comment %} The share buttons share the home page URL. The share text is
grabbed from the store meta description. {% endcomment %} {% layout 'password'
%}

<h1>{{ "general.password_page.opening_soon" | t }}</h1>

{% unless shop.password_message == blank %}
<p class="mb-3">
  {{ shop.password_message }}
</p>
{% endunless %} {% form 'customer' %} {% if form.posted_successfully? %}
<ul class="form-success">
  <li>{{ "general.password_page.signup_form_success" | t }}</li>
</ul>
{% else %}
<h3>{{ "general.password_page.signup_form_heading" | t }}</h3>
<input type="hidden" name="contact[tags]" value="prospect, password page" />
<!--
<label for="email">
  {{ "general.password_page.signup_form_email_label" | t }}
</label>
-->
<input
  type="email"
  required
  name="contact[email]"
  id="Email"
  spellcheck="false"
  autocomplete="off"
  autocapitalize="off"
  placeholder="{{ 'general.password_page.signup_form_email_placeholder' | t }}"
/>
<button type="submit" name="commit" class="button">
  {{ "general.password_page.signup_form_submit" | t }}
</button>

<div class="mt-2 text-teal">
  {{ form.errors | default_errors }}
</div>
{% endif %} {% endform %}

